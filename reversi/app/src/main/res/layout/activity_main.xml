<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_pink"
    tools:context="com.amov.reversi.MainActivity">


    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pale_green"
        android:gravity="top"
        android:text="@string/option"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        android:textSize="28dp"
        android:visibility="visible" />


    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:id="@+id/btnMulti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onMulti"
        android:text="@string/local"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:textStyle="bold"
        android:visibility="visible"/>

    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:id="@+id/btnLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onLocal"
        android:text="@string/comp"
        android:textStyle="bold"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium" />

    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:id="@+id/btnClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClient"
        android:text="@string/cli"
        android:textStyle="bold"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium" />

    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:id="@+id/btnServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onServer"
        android:text="@string/serv"
        android:textStyle="bold"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium" />

    <Button
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="48dp"
        android:id="@+id/btnHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onHistory"
        android:text="@string/btnHistory"
        android:textStyle="bold"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium" />

    <Button
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        android:id="@+id/btnCredits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onCredits"
        android:text="@string/credBtn"
        android:textStyle="bold"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium" />

    <Button
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        android:id="@+id/btnLang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:text="@string/lang"
        android:textStyle="bold" />


</LinearLayout>