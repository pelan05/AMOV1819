    <LinearLayout
        android:layout_marginTop="16dp"
        android:id="@+id/linearLayoutScore"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:contentDescription="@string/buttonTextDescriptor"
            android:layout_weight="1"
            android:id="@+id/imgViewBlack"
            android:src="@drawable/ic_black_circle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/txtViewBlack"
            android:text="@string/initialScore"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:contentDescription="@string/buttonTextDescriptor"
            android:layout_weight="1"
            android:id="@+id/imdViewWhite"
            android:src="@drawable/ic_white_circle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/txtViewWhite"
            android:text="@string/initialScore"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <Button
            android:id="@+id/btnGameBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onReversi"
            android:text="@string/app_name" />
        <Button
            android:id="@+id/btnGameSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="skipMove"
            android:text="@string/skip" />


    </LinearLayout>


